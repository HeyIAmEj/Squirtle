<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Squirtle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#2b78e4</item>
        <item name="colorSecondary">#95bcf2</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Squirtle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Squirtle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Squirtle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>